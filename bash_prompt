case $TERM in
    xterm*)
        if [ -n "$OL_WINDOW_TITLE" ]; then
            echo -ne "\033]0;${OL_WINDOW_TITLE}:${PWD/#$HOME/~}\007"
        else
            echo -ne "\033]0;${HOSTNAME%%.*}:${PWD/#$HOME/~}\007"
        fi
        ;;
    screen)
        if [ -n "$OL_WINDOW_TITLE" ]; then
            echo -ne "\033_${OL_WINDOW_TITLE}:${PWD/#$HOME/~}\033\\"
        else
            echo -ne "\033_${HOSTNAME%%.*}:${PWD/#$HOME/~}\033\\"
        fi
        ;;
    *) 
        ;;
esac
